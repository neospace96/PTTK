@model IEnumerable<SadiShop.Models.ChiTietDonDatHang>

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng - SadiShop";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="preloader_hide">
    <div id="page">
        <!-- BREADCRUMBS -->
        <section class="breadcrumb parallax margbot30"></section>
        <h1 class="center">CHI TIẾT ĐƠN HÀNG</h1>
                <div class="box-body table-responsive no-padding">
                    <table class="table  table-hover" style="font-size: 16px">
                        <tr style="font-size: 16px">
                            <th>Hình sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>
                                Số lượng
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@Url.Content("~/images/hinhsanpham/" + item.SanPham.Hinh1)" width="100px" /></td>
                                <td>@Html.DisplayFor(modelItem => item.SanPham.TenSanPham)</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuong)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
