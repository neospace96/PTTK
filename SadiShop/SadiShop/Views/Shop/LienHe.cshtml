
@{
    ViewBag.Title = "Liên hệ - Sadi Shop";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="preloader_hide">
    <div id="page">
        <!-- BREADCRUMBS -->
        <section class="breadcrumb parallax margbot30"></section>
        <!-- //BREADCRUMBS -->
        <!-- PAGE HEADER -->
        <section class="page_header">

            <!-- CONTAINER -->
            <div class="container">
                <h3 class="pull-left"><b>Liên hệ</b></h3>

                <div class="pull-right">
                    <a href="@Url.Action("Index","Shop")">Trở về trang chủ<i class="fa fa-angle-right"></i></a>
                </div>
            </div><!-- //CONTAINER -->
        </section><!-- //PAGE HEADER -->
        <!-- CONTACTS BLOCK -->
        <section class="contacts_block">

            <!-- CONTAINER -->
            <div class="container">

                <!-- ROW -->
                <div class="row padbot30">
                    <div class="col-lg-6 col-md-6 padbot30">
                        <div id="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.1205671834896!2d106.71249326418277!3d10.802076811674965!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528a459cb43ab%3A0x6c3d29d370b52a7e!2zxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKEhVVEVDSCk!5e0!3m2!1svi!2s!4v1507038391222" width="600" height="490" frameborder="0" style="border:0" allowfullscreen></iframe></div>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-6 padbot30">
                        <ul class="contact_info_block">
                            <li>
                                <h3><i class="fa fa-map-marker"></i><b>Địa chỉ</b></h3>
                                <p>Hoàng Anh Company</p>
                                <span>475A Điện Biên Phủ, F25, Q.BT, Tp.HCM</span>
                            </li>
                            <li>
                                <h3><i class="fa fa-phone"></i><b>Điện Thoại</b></h3>
                                <p class="phone">(+84) 1205 070 996</p>
                                <p class="phone">(+84)  986 698 574</p>
                            </li>
                            <li>
                                <h3><i class="fa fa-envelope"></i><b>E-mail</b></h3>
                                <p>Quảng Cáo</p>
                                <a href="mailto:adv@glammyshop.com">adv@hoanganhco.com</a>
                                <p>Hợp tác</p>
                                <a href="mailto:partner@glammyshop.com">hoptac@hoanganhco.com</a>
                                <p>Hỗ trợ</p>
                                <a href="mailto:return@glammyshop.com">hotro@hoanganhco.com</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 padbot30">
                        <!-- CONTACT FORM -->
                        <div class="contact_form">
                            <h3><b>Form Liên Hệ</b></h3>
                            <div id="note"></div>
                            <div id="fields">
                                <form id="ajax-contact-form" action="">
                                    <label>Tên</label>
                                    <input type="text" name="name" value="" placeholder="Tên" />
                                    <label>E-mail</label>
                                    <input type="text" name="email" value="" placeholder="E-mail" />
                                    <label>Điện thoại</label>
                                    <input type="text" name="phone" value="" placeholder="Điện thoại" />
                                    <label>Nội dung</label>
                                    <textarea name="message" placeholder="Nội dung"></textarea><br>
                                    <input class="btn active" type="submit" value="Gửi" />
                                </form>
                            </div>
                        </div><!-- //CONTACT FORM -->
                    </div>
                </div><!-- //ROW -->
            </div><!-- //CONTAINER -->
        </section><!-- //CONTACTS BLOCK -->
    </div>
</div>

