 @using Microsoft.AspNet.Identity
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/flexslider.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fancySelect.css" rel="stylesheet" media="screen, projection" />
    <link href="~/Content/animate.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <!-- PRELOADER -->
        <div id="preloader"><img src="~/images/preloader.gif" alt="" /></div>
        <!-- //PRELOADER -->
        <div class="preloader_hide">
            <!-- PAGE -->
            <div id="page">

                <!-- HEADER -->
                <header>

                    <!-- TOP INFO -->
                    <div class="top_info">

                        <!-- CONTAINER -->
                        <div class="container clearfix">
                        <ul class="secondary_menu">
                            @Html.Partial("_LoginPartial")
                        </ul>


                            <div class="live_chat"><a href="javascript:void(0);"><i class="fa fa-comment-o"></i> Hỗ trợ trực tuyến</a></div>

                            <div class="phone_top">Bạn cần tư vấn? <a href="tel:1 800 888 2828">(+84) 1205 070 996</a></div>
                        </div><!-- //CONTAINER -->
                    </div><!-- TOP INFO -->
                    <!-- MENU BLOCK -->
                    <div class="menu_block">

                        <!-- CONTAINER -->
                        <div class="container clearfix">

                            <!-- LOGO -->
                            <div class="logo">
                                <a href="@Url.Action("Index", "Shop")"><img src="~/images/logo.png" alt="" /></a>
                            </div><!-- //LOGO -->
                            <!-- SEARCH FORM -->
                            <div class="top_search_form">
                                <a class="top_search_btn" href="#"><i class="fa fa-search"></i></a>
                                <form method="post" action="@Url.Action("KetQuaTimKiem", "Shop")">
                                    @Html.TextBox("txtTimKiem","",htmlAttributes:new {@class="TextBoxTimKiem", @placeholder="Tìm kiếm..." })
                                    <input type="submit" value="Tìm" style="margin-right:50px; margin-bottom:5px;" />
                                    @*<input type="text" id="txtTimKiem" name="txtTimKiem" value="Search" onFocus="if (this.value == 'Search') this.value = '';" onBlur="if (this.value == '') this.value = 'Search';"/>*@
                                </form>
                            </div><!-- SEARCH FORM -->
                            <!-- SHOPPING BAG -->
                            <div class="shopping_bag">
                                @Html.Action("GioHangPartial", "GioHang")
                            </div>
                            <!-- //SHOPPING BAG -->
                           
                            <!-- MENU -->
                            <ul class="navmenu center">
                                <li class="last first">
                                    <a href="@Url.Action("Index", "Shop")">Trang chủ</a>
                                </li>
                                   <li><a href="@Url.Action("HienThiSanPhamAcer", "Shop")">Acer</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamMacbook", "Shop")">Macbook</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamAsus", "Shop")">Asus</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamHP", "Shop")">HP</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamDell", "Shop")">Dell</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamToshiba", "Shop")">Toshiba</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamMicrosoft", "Shop")">Microsoft</a></li>
                                <li><a href="@Url.Action("HienThiSanPhamLGGram", "Shop")">LG Gram</a></li>
                                <li class="last sale_menu"><a href="@Url.Action("Sale", "Shop")">Khuyến mãi</a></li>
                            </ul><!-- //MENU -->
                        </div><!-- //MENU BLOCK -->
                    </div><!-- //CONTAINER -->
                </header><!-- //HEADER -->
                @RenderBody()
                <!-- FOOTER -->
                <footer>

                    <!-- CONTAINER -->
                    <div class="container" data-animated='fadeInUp'>

                        <!-- ROW -->
                        <div class="row">

                            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 col-ss-12 padbot30">
                                <h4>Liên hệ</h4>
                                <div class="foot_address"><span>Hoàng Anh Company</span>475A Điện Biên Phủ, F25, Q.BT, TP.HCM 70000, Hutech</div>
                                <div class="foot_phone"><a href="tel:1 800 888 2828">(+84) 1205 070 996</a></div>
                                <div class="foot_mail"><a href="mailto:info@glamyshop.com">info@sadishop.com</a></div>
                                <div class="foot_live_chat"><a href="javascript:void(0);"><i class="fa fa-comment-o"></i> Hỗ trợ trực tuyến</a></div>
                            </div>

                            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 col-ss-12 padbot30">
                                <h4>Thông tin</h4>
                                <ul class="foot_menu">
                                    <li><a href="@Url.Action("About", "Shop")">Về Chúng Tôi</a></li>
                                    <li><a href="@Url.Action("LienHe", "Shop")">Liên hệ</a></li>
                                </ul>
                            </div>

                            <div class="respond_clear_480"></div>

                            <div class="col-lg-4 col-md-4 col-sm-6 padbot30">
                                <h4>THÔNG TIN SHOP</h4>
                                <p>Chúng tôi yêu cầu bạn cung cấp tên, số điện thoại, địa chỉ nhà và địa chỉ email hoặc đăng ký bản tin. Khi mua hàng được thực hiện trên trang web của chúng tôi, ngoài những điều trên, chúng tôi cũng yêu cầu địa chỉ giao hàng và phương thức thanh toán.</p>
                                <p>Chúng tôi có thể lấy thông tin về cách sử dụng trang web của chúng tôi để giúp chúng tôi phát triển và cải tiến nó hơn thông qua các cuộc khảo sát trực tuyến và các yêu cầu khác.</p>
                            </div>

                            <div class="respond_clear_768"></div>

                            <div class="col-lg-4 col-md-4 padbot30">
                                <h4>BẢN TIN</h4>
                                <form class="newsletter_form clearfix" action="javascript:void(0);" method="get">
                                    <input type="text" name="newsletter" value="Nhập E-mail & Giảm 10%" onFocus="if (this.value == 'Nhập E-mail & Giảm 10%') this.value = '';" onBlur="if (this.value == '') this.value = 'Nhập E-mail & Giảm 10%';" />
                                    <input class="btn newsletter_btn" type="submit" value="ĐĂNG KÝ">
                                </form>

                                <h4>Mạng Xã Hội</h4>
                                <div class="social">
                                    <a href="javascript:void(0);"><i class="fa fa-twitter"></i></a>
                                    <a href="javascript:void(0);"><i class="fa fa-facebook"></i></a>
                                    <a href="javascript:void(0);"><i class="fa fa-google-plus"></i></a>
                                    <a href="javascript:void(0);"><i class="fa fa-pinterest-square"></i></a>
                                    <a href="javascript:void(0);"><i class="fa fa-tumblr"></i></a>
                                    <a href="javascript:void(0);"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div><!-- //ROW -->
                    </div><!-- //CONTAINER -->
                    <!-- COPYRIGHT -->
                    <div class="copyright">

                        <!-- CONTAINER -->
                        <div class="container clearfix">
                            <div class="foot_logo"><a href="index.html"><img src="~/images/foot_logo.png" alt="" /></a></div>

                            <div class="copyright_inf">
                                <span>Sadi Shop© 2017</span> |
                                <a class="back_top" href="javascript:void(0);">Trở về đầu trang <i class="fa fa-angle-up"></i></a>
                            </div>
                        </div><!-- //CONTAINER -->
                    </div><!-- //COPYRIGHT -->
                </footer><!-- //FOOTER -->
            </div><!-- //PAGE -->
        </div>
        <!-- TOVAR MODAL CONTENT -->
        <div id="modal-body" class="clearfix">
            <div id="tovar_content"></div>
            <div class="close_block"></div>
        </div><!-- TOVAR MODAL CONTENT -->
        <!-- SCRIPTS -->
        <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
        <!--[if IE]><html class="ie" lang="en"> <![endif]-->
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.sticky.js" type="text/javascript"></script>
        <script src="~/Scripts/parallax.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.flexslider-min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.jcarousel.js" type="text/javascript"></script>
        <script src="~/Scripts/fancySelect.js"></script>
        <script src="~/Scripts/animate.js" type="text/javascript"></script>
        <script src="~/Scripts/myscript.js" type="text/javascript"></script>
        <script>
		if (top != self) top.location.replace(self.location.href);
        </script>
    </div>
</body>
</html>
