@model SadiShop.Models.SanPham

@{
    ViewBag.Title = "Xóa Sản Phẩm - SadiShop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có chắc chắn xóa sản phẩm này?</h3>
<div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Sản phẩm</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>Mã sản phẩm</td>
                            <td>@Html.DisplayFor(model => model.MaSanPham)</td>
                        </tr>
                        <tr>
                            <td>Tên sản phẩm</td>
                            <td>@Html.DisplayFor(model => model.TenSanPham)</td>
                        </tr>
                        <tr>
                            <td>Mã Loại</td>
                            <td>@Html.DisplayFor(model => model.MaThuongHieu)</td>
                        </tr>
                        <tr>
                            <td>Mã nhà sản xuất</td>
                            <td>@Html.DisplayFor(model => model.MaThuongHieu)</td>
                        </tr>
                        <tr>
                            <td>Thông tin sản phẩm</td>
                            <td>@Html.DisplayFor(model => model.Thongtin)</td>
                        </tr>
                        <tr>
                            <td>Giá bán</td>
                            <td>@String.Format("{0:0,0}", Model.GiaBan) VNĐ</td>
                        </tr>
                        <tr>
                            <td>Hình sản phẩm</td>
                            <td>
                                <img src="@Url.Content("~/images/hinhsanpham/" + Model.Hinh1)" width="120px" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" /> |
            @Html.ActionLink("Trỏ về", "SanPham")
        </div>
    }
</div>
