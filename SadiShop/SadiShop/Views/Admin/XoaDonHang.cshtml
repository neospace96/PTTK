@model SadiShop.Models.DonDatHang

@{
    ViewBag.Title = "Xóa Đơn hàng - SadiShop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có chắc chắn xóa đơn hàng này?</h3>
<div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Đơn Hàng</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>Mã đơn hàng</td>
                            <td>@Html.DisplayFor(model => model.MaDonDatHang)</td>
                        </tr>
                        <tr>
                            <td>Ngày đặt hàng</td>
                            <td>@Html.DisplayFor(model => model.NgayDatHang)</td>
                        </tr>
                        <tr>
                            <td>Tên người đặt</td>
                            <td>@Html.DisplayFor(model => model.AspNetUser.FullName)</td>
                        </tr>
                        <tr>
                            <td>Tổng tiền</td>
                            <td>@String.Format("{0:0,0}", Model.ThanhTien) VNĐ</td>
                        </tr>
                            </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" /> |
            @Html.ActionLink("Trỏ về", "QuanLyDonHangChuaDyet")
        </div>
    }
</div>
