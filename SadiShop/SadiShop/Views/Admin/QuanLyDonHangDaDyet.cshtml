
@{
    ViewBag.Title = "Đơn Hàng Đã Duyệt - SadiShop";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<SadiShop.Models.DonDatHang>

@helper Truncate(string input, int length)
{
if (input.Length < length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        QUẢN ĐƠN HÀNG ĐÃ DUYỆT
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Quản lý đơn hàng đã duyệt</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped" style="text-align:center">
                        <thead>
                            <tr>
                                <th>Ngày tạo</th>
                                <th>Mã</th>
                                <th>Thông tin đặt hàng</th>
                                <th>Thành tiền</th>
                                <th>Trạng thái</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.NgayDatHang)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MaDonDatHang)</td>
                                    <td>
                                        <strong>Họ và tên:</strong> @Html.DisplayFor(modelItem => item.AspNetUser.FullName)
                                        <br />
                                        <strong>Địa chỉ:</strong> @Html.DisplayFor(modelItem => item.AspNetUser.Address)
                                        <br />
                                        <strong>Số điện thoại:</strong> @Html.DisplayFor(modelItem => item.AspNetUser.PhoneNumber)
                                    </td>
                                    <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
                                    <td>
                                        @if (item.MaTinhTrang == 2)
                                        {
                                            @Html.ActionLink("Đang giao hàng", "DaDuyet1", new { @MaDonDatHang = item.MaDonDatHang })
                                        }
                                        else
                                        {
                                            <span>Đã nhận hàng</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Chi tiết", "ChiTietDonHang", new { @id = item.MaDonDatHang })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Ngày tạo</th>
                                <th>Mã</th>
                                <th>Thông tin đặt hàng</th>
                                <th>Thành tiền</th>
                                <th>Trạng thái</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->